<h1>Listing posts</h1>
<%= link_to 'New post', new_post_path %>
<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.text %></td>
			<td><%= link_to 'show', post_path(post) %></td>
			<td><%= link_to 'edit', edit_post_path(post) %></td>
			<td><%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: '确认删除？' } %></td>
		</tr>
	<% end %>
</table>